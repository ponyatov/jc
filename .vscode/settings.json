{
    "multiCommand.commands": [
        { "command": "multiCommand.f11",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make cgen \u000D"}}]},
        { "command": "multiCommand.f12",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make cpp \u000D"}}]},
        { "command": "multiCommand.alts",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make format \u000D"}}]},
        { "command": "multiCommand.altx",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make run \u000D"}}]},
    ],

    // files
    "files.exclude": {
        "_build": true,
        "docs": true,
    },
    "files.watcherExclude": {
        "ref/**": true,
    },
    "files.associations": {
        // "lib/*.ini": "javascript",
        // ".doxygen": "ini"
    },

    // editor
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80],
    "workbench.tree.indent": 24,
    "editor.fontSize": 14,
    "editor.lineNumbers": "on",
    "explorer.autoReveal": false,
    "files.insertFinalNewline": true,
    "git.enabled": false,
    "terminal.integrated.copyOnSelection": true,
    // "editor.inlayHints.enabled": "offUnlessPressed",

    // clang-format
    "clang-format.executable":     "clang-format",
    "clang-format.fallbackStyle":  "Google",
    "clang-format.style":          "file",

    // OCaml
    "[ocaml]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[ocaml.interface]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },

    // JavaScript
    "[js]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave":     true
    },

    // C++
    "[c,cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave":     true
    },
    "C_Cpp.intelliSenseEngine": "Tag Parser",

    // cmake
    "cmake.configureSettings": {
        "APP": "${workspaceFolderBasename}",
        "PYTHON_DEPS_CHECKE": 1,
        "PYTHON": "python3",
        "ESP_PLATFORM": 1,
        "CCACHE_ENABLE": 0
    },
    "cmake.sourceDirectory"  : "${workspaceFolder}",
    "cmake.buildDirectory"   : "${workspaceFolder}/tmp/build",
	"cmake.generator"        : "Ninja", // Unix Makefiles",
    "cmake.configureOnOpen"  : false,
    "cmake.debugConfig"      : {
        "cwd": "${workspaceFolder}",
		"args": [
"${workspaceFolder}/lib/${workspaceFolderBasename}.ini"
        ]},
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

    // ESP32
    "idf.adapterTargetName": "esp32",
    "idf.pythonBinPath": "${env:IDF_PYTHON_ENV_PATH}/bin/python3",
    "idf.buildPath": "${workspaceFolder}/tmp/build",
    "idf.port": "/dev/ttyUSB0",
    "idf.flashType": "UART",
    "idf.flashBaudRate": "1000000",
}
